@model IEnumerable<AccountTypes>

@{
    ViewData["Title"] = "Account Types";
}

<h1>Account Types List</h1>

<a asp-action="Create" class="btn btn-success mb-3">Create AccountTypes</a>

<div class="row d-flex align-items-center">
    <div class="col-sm-12 col-lg-6 p-5">
      <img src="~/img/indexAccountTy.svg" width="80%" />
    </div>
    <div class="col-sm-12 col-lg-6 p-5">
      <table class="table">
        <thead>
          <tr>
            <th>Actions</th>
            <th>Name</th>
          </tr>
        </thead>
        <tbody id="reordenable">
          @foreach (var accountTypes in Model) {
          <tr>
            <td>
              <input type="hidden" value="@accountTypes.Id" class="ids" />
              <a
                class="btn btn-primary"
                asp-action="Modify"
                asp-route-id="@accountTypes.Id"
                >Modify</a
              >
              <a
                class="btn btn-danger"
                asp-action="Delete"
                asp-route-id="@accountTypes.Id"
                >Delete</a
              >
            </td>
            <td>@accountTypes.Name</td>
          </tr>
          }
        </tbody>
      </table>
    </div>
  </div>