@model IEnumerable<Categories>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories List</h1>

<a asp-action="Create" class="btn btn-success mb-3">Create Categorie</a>

 <div class="row d-flex align-items-center">
    <div class="col-sm-12 col-lg-6 p-5">
      <img src="~/img/indexcategori.svg" width="70%" />
    </div>
    <div class="col-sm-12 col-lg-6 p-5">
      <table class="table">
        <thead>
          <tr>
            <th>Actions</th>
            <th>Name</th>
          </tr>
        </thead>
        <tbody id="reordenable">
          @foreach (var categorie in Model) {
          <tr>
            <td>
              <input type="hidden" value="@categorie.Id" class="ids" />
              <a
                class="btn btn-primary"
                asp-action="Modify"
                asp-route-id="@categorie.Id"
                >Modify</a
              >
              <a
                class="btn btn-danger"
                asp-action="Delete"
                asp-route-id="@categorie.Id"
                >Delete</a
              >
            </td>
            <td>@categorie.Name</td>
          </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
