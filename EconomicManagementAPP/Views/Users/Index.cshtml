@model IEnumerable<Users>

@{
    ViewData["Title"] = "List Users";
}

<h1>Users List</h1>

<a asp-action="Create" class="btn btn-success mb-3">Create User</a>

<div class="row d-flex align-items-center">
    <div class="col-sm-12 col-lg-6 p-5">
      <img src="~/img/createuser.svg" width="70%" />
     </div>
      <div class="col-sm-12 col-lg-6 p-5">
<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var users in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@users.Id" class="ids" />
                    <a class="btn btn-primary" asp-action="Modify" asp-route-id="@users.Id">Modify</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@users.Id">Delete</a>
                </td>
                <td>
                    @users.Email
                </td>

            </tr>
        }
    </tbody>
</table>
  </div>
    </div>
